<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/forecastContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="32dp">

        <!-- AccuWeather Logo -->
        <ImageView
            android:id="@+id/imgAccuLogo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:src="@drawable/accuweather"
            android:layout_marginBottom="16dp"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/tvCityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="12dp"
            android:textAlignment="center"
            android:visibility="gone"
            android:contentDescription="Displayed city name" />




        <EditText
            android:id="@+id/etCityKey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter City Key"
            android:inputType="text"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:importantForAutofill="yes"
            android:autofillHints="postalCode"
            android:accessibilityLiveRegion="polite"
            android:labelFor="@+id/etCityKey" />


        <Button
            android:id="@+id/btnFetch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Forecast"
            android:layout_marginTop="12dp"
            android:contentDescription="Fetch weather button" />

        <ImageView
            android:id="@+id/imgWeatherIcon"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginTop="20dp"
            android:contentDescription="Current weather icon" />
        

    </LinearLayout>
</ScrollView>
